{
    "name": "deforay/intelis",
    "description": "InteLIS - Open Source LIS",
    "homepage": "https://github.com/deforay/intelis",
    "type": "project",
    "license": "InteLIS-Community-Copyleft-NonCommercial-1.0",
    "version": "5.4.0",
    "authors": [
        {
            "name": "Deforay",
            "email": "support@deforay.com",
            "homepage": "https://deforay.com"
        }
    ],
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4",
        "ext-bcmath": "*",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-gettext": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-sodium": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "amitdugar/db-tools": "^2.0",
        "brick/phonenumber": "^0.6.0",
        "crunzphp/crunz": "^3.8",
        "ezyang/htmlpurifier": "^4.19",
        "gettext/gettext": "^5.7",
        "gregwar/captcha": "^1.3",
        "guzzlehttp/guzzle": "^7.10",
        "hackzilla/password-generator": "^1.7",
        "halaxa/json-machine": "^1.2",
        "league/csv": "^9.27",
        "maennchen/zipstream-php": "^3.2",
        "monolog/monolog": "^3.10",
        "nesbot/carbon": "^3.11",
        "nikic/iter": "^2.4",
        "openspout/openspout": "^5.2",
        "php-di/php-di": "^7.1",
        "phpmailer/phpmailer": "^7.0",
        "phpmyadmin/sql-parser": "^5.11",
        "phpoffice/phpspreadsheet": "^5.4",
        "psr/log": "^3.0",
        "setasign/fpdi": "^2.6",
        "slim/psr7": "^1.8",
        "slim/slim": "^4.15",
        "sqids/sqids": "^0.4.1",
        "symfony/cache": "^7.3",
        "symfony/console": "^7.2",
        "symfony/filesystem": "^7.4",
        "symfony/process": "^7.4",
        "symfony/string": "^6.4",
        "symfony/uid": "^8.0",
        "tecnickcom/tcpdf": "^6.10",
        "thingengineer/mysqli-database-class": "dev-master"
    },
    "suggest": {
        "dcarbone/php-fhir-generated": "Needed for FHIR Parsing"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/classes/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "secure-http": true,
        "platform": {
            "php": "8.4"
        }
    },
    "require-dev": {
        "kint-php/kint": "^5.1",
        "rector/rector": "^1.1",
        "squizlabs/php_codesniffer": "^3.11",
        "symfony/var-dumper": "^7.1"
    },
    "scripts": {
        "scan": "@php bin/scan.php",
        "cleanup": "@php bin/cleanup.php 30",
        "version": "@php bin/build/generate-version.php",
        "db:collation": "@php vendor/bin/db-tools collation --all",
        "db:backup": "@php vendor/bin/db-tools backup --all",
        "backup": [
            "@php bin/backup-configs.php",
            "@db:backup"
        ],
        "interface": "@php bin/interface.php",
        "lock-samples": "@php bin/update-sample-status.php",
        "purge-cache": "@php app/includes/clear-cache.php",
        "clear-logs": "@php bin/clear-logs.php",
        "fixes": [
            "@php bin/setup/update-privileges.php",
            "@php bin/setup/fix-app-menu.php"
        ],
        "audit-tables-fix": "@php bin/setup/fix-audit-tables.php",
        "archive-audit-tables": "@php app/tasks/archive-audit-tables.php",
        "token": "@php bin/token.php",
        "sts-setup": [
            "@php bin/setup/setup-sts.php",
            "@purge-cache",
            "@token"
        ],
        "setup-sts": [
            "@sts-setup"
        ],
        "system-admin": "@php bin/setup/system-admin.php",
        "migrate": "@php bin/migrate.php -y",
        "reset-metadata": "@php app/tasks/remote/sts-metadata-receiver.php -ft",
        "metadata-sync": [
            "@php app/tasks/remote/sts-metadata-receiver.php",
            "@php app/tasks/remote/lab-metadata-sender.php"
        ],
        "send-results": "@php app/tasks/remote/results-sender.php",
        "receive-requests": "@php app/tasks/remote/requests-receiver.php",
        "generate-translation-strings": "@php app/system/generate-translation-strings.php",
        "fix-app-menu": "@php bin/setup/fix-app-menu.php",
        "sync-sts": [
            "@token",
            "@metadata-sync",
            "@send-results",
            "@receive-requests"
        ],
        "post-install": [
            "@migrate",
            "@fixes",
            "@purge-cache",
            "@db:collation",
            "@sts-setup"
        ],
        "post-update": [
            "@purge-cache",
            "@migrate",
            "@fixes",
            "@db:collation",
            "@token",
            "@metadata-sync",
            "@cleanup",
            "@purge-cache"
        ],
        "db:repair": [
            "@php bin/setup/fix-audit-tables.php",
            "@php bin/reset-seq.php"
        ]
    },
    "scripts-descriptions": {
        "post-install": "Tasks to run after InteLIS install",
        "post-update": "Tasks to run after InteLIS update",
        "sync-sts": "Sync data with a connected STS server",
        "sts-setup": "Setup connection with a STS server",
        "setup-sts": "Setup connection with a STS server",
        "migrate": "Run database migrations",
        "purge-cache": "Clear application cache",
        "fixes": "Run application fixes",
        "db:collation": "Ensure database tables use correct collation",
        "db:backup": "Backup all databases",
        "backup": "Backup application configurations and databases",
        "system-admin": "Create or update system administrator account",
        "reset-metadata": "Reset STS metadata to force full sync",
        "metadata-sync": "Sync metadata with connected STS server",
        "send-results": "Send test results to connected STS server",
        "receive-requests": "Receive test requests from connected STS server",
        "generate-translation-strings": "Generate translation strings from source code",
        "fix-app-menu": "Fix application menu entries",
        "lock-samples": "Lock sample records that have been completed",
        "cleanup": "Cleanup old temporary files and logs"
    }
}