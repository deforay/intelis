#!/usr/bin/env bash
# File: intelis

# If we're already in a directory with composer.json, use current directory
if [ -f "composer.json" ]; then
    WORK_DIR="$(pwd)"
else
    # Otherwise, use script's directory
    WORK_DIR="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")" && pwd)"
    cd "$WORK_DIR"
fi

# Run composer with the passed arguments
COMPOSER_ALLOW_SUPERUSER=1 composer "$@"